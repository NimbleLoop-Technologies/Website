@using NimbleLoop.WebApp.Ui.Components.Layouts
@inherits LayoutComponentBase


<StackedLayout Body="Body" />

<div id="blazor-error-ui" data-nosnippet role="alert" aria-live="assertive">
  <div class="error-container">
    <div class="error-content">
      <svg class="error-icon" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" />
      </svg>
      <div>
        <div class="error-message">An unhandled error has occurred.</div>
        <div class="error-details">The application has encountered an unexpected error. Please reload the page or try again later.</div>
      </div>
    </div>
    <div class="error-actions">
      <a href="." class="reload" title="Reload the page">
        <svg class="mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.65 6.35C16.2 4.9 14.21 4 12 4c-4.42 0-7.99 3.58-7.99 8s3.57 8 7.99 8c3.73 0 6.84-2.55 7.73-6h-2.08c-.82 2.33-3.04 4-5.65 4-3.31 0-6-2.69-6-6s2.69-6 6-6c1.66 0 3.14.69 4.22 1.78L13 11h7V4l-2.35 2.35z" />
        </svg>
        Reload
      </a>
      <button class="dismiss" title="Dismiss this error" onclick="document.getElementById('blazor-error-ui').style.display='none'">
        ✕
      </button>
    </div>
  </div>
  <div class="sr-only-content">
    Error notification: The application has encountered an unhandled error. Use the reload button to refresh the page or the dismiss button to hide this message.
  </div>
</div>